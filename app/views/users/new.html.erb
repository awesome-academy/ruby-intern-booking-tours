<%= render "shared/error_messages" %>
<div class="container register_content">
  <h1><%= t("register") %></h1>
  <div class="register_wrap">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, t("user_name") %>
        <%= f.text_field :name, class: "form-control",
          placeholder: t("user_name"), required: true %>
      </div>
      <div class="form-group">
        <%= f.label :email, t("user_email") %>
        <%= f.email_field :email, class: "form-control",
          placeholder: t("user_email"), required: true %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number, t("user_phone") %>
        <%= f.telephone_field :phone_number, class: "form-control",
          pattern: "[0-9]{4}[0-9]{3}[0-9]{3}", placeholder: t("phone"), required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, t("user_password") %>
        <%= f.password_field :password, class: "form-control",
          placeholder: t("user_password"), required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t("password_confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control",
          placeholder: t("password_confirmation"), required: true %>
      </div>
      <%= f.submit t("register"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
