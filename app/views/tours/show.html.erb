        </div>
        <div class="col-lg-4">
          <div class="form_book_tour">
            <h5><%= t("tour_tel") %> (028) 3933 8002</h5>
            <%= form_for @book_tour, remote: true, html: {class: "form_book"} do |f| %>
              <%= f.hidden_field :tour_id, value: 2 %>
              <%= f.hidden_field :tour_day, value: 5 %>
              <div class="form_book_group">
                  <%= f.label :start_date, t("tour_start"), class: "label_time" %>
                  <%= f.text_field :start_date, required: true %>
              </div>
              <div class="form_book_group">
                  <%= f.label :end_date, t("tour_end"), class: "label_time" %>
                  <%= f.text_field :end_date, required: true %>
              </div>
              <div class="form_book_group">
                  <%= f.label :quantity, t("tour_quatity"), class: "label_time" %>
                  <%= f.number_field :quantity, required: true, min: Settings.min_number, max: 5 %>
              </div>
              <div class="form_book_group">
                  <%= f.label :customer_name, t("customer_name"), class: "label_time" %>
                  <%= f.text_field :customer_name, required: true %>
              </div>
              <div class="form_book_group">
                  <%= f.label :phone_number, t("phone"), class: "label_time" %>
                  <%= f.telephone_field :phone_number, required: true, pattern: "[0-9]{4}[0-9]{3}[0-9]{3}",
                  placeholder: "0854-083-118" %>
              </div>
              <div class="form_book_group">
                  <%= f.label :email, t("email"), class: "label_time" %>
                  <%= f.email_field :email, required: true%>
              </div>
              <div class="form_book_group_price">
                  <span class="label_time" for="datetimepicker" ><%= t("tour_price") %></span>
                  <span id="tour_price">4190000</span>
                </div>
                <p id="total_price" class="total_price_tour">12.570.000 VND</p>
              <%= f.submit t("tour_book"), class: "btn_submit_book" %>
            <% end %>
          </div>
      </div>
    </div>
